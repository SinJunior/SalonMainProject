<Window x:Class="SalonMainProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalonMainProject"
        mc:Ignorable="d"
               Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F73859"></Grid>
        <Image Source="Resources\Logo-buty.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Бархатные бровки" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Tahoma"></TextBlock>
        <Grid Grid.Row="2" Background="#FFE1E4FF"></Grid>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
